<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textbarColor"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@mipmap/ic_day_fortune_bg"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="@string/main_today_fortune"
                android:textColor="@color/textcoloe3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/go_back_calendar"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_day_fortune_bg"
                android:padding="@dimen/dp_12"
                android:text="@string/go_back_calendar"
                android:textColor="@color/textcoloe3"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tv_lef_back"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@mipmap/ic_login_black"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_center_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/view_actionBar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2021.09.10"
                android:textColor="@color/textcoloe3"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@mipmap/ic_ce_up"
                android:paddingLeft="@dimen/dp_5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center_vertical|end"
                android:text="2022年12月31日星期二"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_45" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>