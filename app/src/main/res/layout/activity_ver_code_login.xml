<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".mine.newlogin.VerCodeLoginActivity">

    <include layout="@layout/view_title_actionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F7F7F7" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:text="输入验证码"
        android:textColor="@color/textcoloe3"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="验证码已发送至  "
            android:textColor="@color/textcoloe3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_vercode_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="137 7739 5335"
            android:textColor="@color/textcoloe3"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.wynsbin.vciv.VerificationCodeInputView
        android:id="@+id/vciv_code3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:gravity="center"
        android:orientation="horizontal"
        app:vciv_et_cursor_color="@color/colorPrimary"
        app:vciv_et_height="@dimen/dp_58"
        app:vciv_et_inputType="number"
        app:vciv_et_number="4"
        app:vciv_et_spacing="@dimen/dp_25"
        app:vciv_et_background="#FFFFFF"
        app:vciv_et_text_color="@android:color/black"
        app:vciv_et_text_size="18sp"
        app:vciv_et_underline_default_color="#D5D5D5"
        app:vciv_et_underline_focus_color="#646464"
        app:vciv_et_underline_height="@dimen/dp_2"
        app:vciv_et_underline_show="true"
        app:vciv_et_width="58dp" />

    <TextView
        android:id="@+id/btn_get_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@drawable/mine_business_bg_gray"
        android:clickable="false"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>