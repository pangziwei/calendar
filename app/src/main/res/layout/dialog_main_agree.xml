<?xml version="1.0" encoding="utf-8"?>
<com.juyou.calendar.manage.MaxHeightView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:background="@drawable/bg_white_corner10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_24"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_E64646"
            android:paddingTop="@dimen/dp_5"
            android:text="欢迎您登录吉日万年历"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:src="@mipmap/ic_wel_dialog"
            android:paddingTop="@dimen/dp_10"
            android:text="欢迎您登录吉日万年历" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_26"
                android:paddingTop="@dimen/dp_17"
                android:paddingRight="@dimen/dp_26"
                android:paddingBottom="@dimen/dp_22"
                android:text="" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:text="暂不同意"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@drawable/wel_dialog_unagree_bg"
                android:textColor="@color/main_but_down"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_weight="6"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/wel_dialog_agree_bg"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:text="同意并进入"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</com.juyou.calendar.manage.MaxHeightView>